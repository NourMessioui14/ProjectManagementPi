pipeline {
    agent any

    tools {
        nodejs 'NodeJs'
    }

    stages {
        stage('Install dependencies') {
            steps {
                script {
                    try {
                        dir('ProjectManagement_main') {
                            sh 'npm install'
                        }
                    } catch (err) {
                        currentBuild.result = 'FAILURE'
                        error("Failed to install dependencies: ${err}")
                    }
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    echo 'Running unit tests...'
                }
            }
        }

        stage('Build application') {
            steps {
                script {
                    echo 'Building the application...'
                }
            }
        }
    }

   
}