pipeline {
    agent any
    tools {
        nodejs 'NodeJs'
    }
    stages {
        stage('Unit Test') {
            steps {
                script {
                    echo 'This is a testing stage for unit tests.'
                }
            }
        }
        stage('Build application') {
            steps {
                script {
                    echo 'This is a testing stage for building the application.'
                }
            }
        }
        stage('Building images (node and mongo)') {
            steps {
                script {
                    sh('docker-compose build')
                }
            }
        }
    }
}
